{
  "compilerOptions": {
    "noImplicitAny": true,
    
    "rootDir": "./source",
    "outDir": "./dist",

    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",

    "lib": ["ES2020"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,

    "noEmitOnError": true,
    "removeComments": true
  },
  "include": ["source/**/*"]
}
